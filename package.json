{
  "name": "alfred-bedrock-workflow",
  "version": "1.0.0",
  "description": "Alfred workflow for Amazon Bedrock",
  "type": "module",
  "packageManager": "pnpm@10.26.2",
  "keywords": [
    "alfred",
    "workflow",
    "bedrock",
    "aws",
    "claude"
  ],
  "author": "philippe@degeeter.fr",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "tsx --test 'test/**/*.test.ts'",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "workflow:build": "pnpm build && bash scripts/build-workflow.sh",
    "workflow:dev": "pnpm build && bash scripts/build-workflow.sh && open bedrock.alfredworkflow"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tsconfig/node24": "^24.0.0",
    "@types/node": "^24.0.0",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "prettier": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0"
  }
}
